- semantic_form_for @category do |f|
  - f.inputs do
    = f.input :name
    = f.input :abbrev
    %li.select
      = f.label :parent_id, "Parent"
      = f.collection_select :parent_id, Category.all(:order => 'name'), :id, :abbrev, :include_blank => true
    = f.input :notes
  - f.buttons do
    = f.commit_button "Submit"
